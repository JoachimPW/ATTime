@using ATTime.Models.LoginViewModels
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/wwwroot/css/style.css")
    @Styles.Render("~/wwwroot/css/TeacherView.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body style="margin:0; padding:0;">
    <div class="row">
        <div id="sidebar-wrapper" class="navigation-left col-4">
            <ul class="sidebar-nav navigation-list col-12">

                <li class="nav-link">
                    <a>
                    @Html.ActionLink("Teams", "Index", "TeacherView")
                    </a>
                </li>
                <li class="nav-link">
                    @Html.ActionLink("Calender", "calender", "TeacherView")
                </li>
                <li class="nav-link">
                    @Html.ActionLink("Log out", "logout", "Login")
                </li>
            </ul>
        </div>


        <div class="container body-content col-8">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
