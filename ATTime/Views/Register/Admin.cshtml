@model ATTime.Models.ViewModel.RegistorViewModel


@{
    ViewBag.Title = "Admin";
}

<h1> Register </h1>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")



@using (Html.BeginForm("CreateOperator", "Register", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="">
        <hr />
        <br />

        <div class"">
            @Html.LabelFor(model => model.SchoolName, new { @class = "" })
            @Html.TextBoxFor(model => model.SchoolName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SchoolName)

        </div>
        <br />

        <div class"">
            @Html.LabelFor(model => model.Logo, new { @class = "" })
            @Html.TextBoxFor(model => model.Logo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Logo)

        </div>
        <br />

        <div class"">
            @Html.LabelFor(model => model.FirstName, new { @class = "" })
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName)

        </div>
        <br />
        <div class"">
            @Html.LabelFor(model => model.LastName, new { @class = "" })
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

        </div>
        <br />
        <div class"">
            @Html.LabelFor(model => model.Username, new { @class = "" })
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @onkeyup = "UserCheck()" })
            @Html.ValidationMessageFor(model => model.Username)
            <p id="Status"></p>

        </div>
        <br />
        <div class"">
            @Html.LabelFor(model => model.Psw, new { @class = "" })
            @Html.TextBoxFor(model => model.Psw, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Psw)

        </div>
        <br />
        <div class"">
            @Html.LabelFor(model => model.Phone, new { @class = "" })
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Phone)

        </div>

        <div class="form-group">
            <div class="">
                <button type="submit" id="submitForm" class="btn btn-default m-1 p-1 btn-success" asp-action>Create</button>
            </div>
        </div>
    </div>
}

<h1>@ViewBag.SuccessMessage</h1>


@Html.ActionLink("Login", "Index", "Login")

@Html.Partial("_CheckUsername")

