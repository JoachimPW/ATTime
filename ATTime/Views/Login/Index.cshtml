@model ATTime.Models.LoginViewModels.LoginModel
@using System.Collections.Generic
@using System.Linq
@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>
@ViewBag.msg
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.LabelFor(model => model.Username, new { @class = "col-form-label" })
    @Html.EditorFor(model => model.Username, new { @class = "m-1 text-primary" })
    <span asp-validation-for="Username" class="text-danger"></span>


    @Html.LabelFor(model => model.Password, new { @class = "col-form-label" })
    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @class = "m-1 text-primary", @id = "password" } })
    <span asp-validation-for="Password" class="text-danger"></span>
    <button type="submit" class="btn btn-default m-1 p-1 btn-succes">Login</button>

}
<input type="checkbox" onclick="myFunction()" style="display:inline-block;" />
<p style="display:inline-block;">Show password</p>

<script>
    function myFunction() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>